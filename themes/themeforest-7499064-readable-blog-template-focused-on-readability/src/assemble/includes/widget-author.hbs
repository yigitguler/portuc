<!-- Widget author -->
<div class="widget-author  boxed  push-down-30">
  <div class="widget-author__image-container">
    <div class="widget-author__avatar--blurred">
      <img src="images/dummy/about-{{id}}.jpg" alt="Avatar image" width="90" height="90">
    </div>
    <img class="widget-author__avatar" src="images/dummy/about-{{id}}.jpg" alt="Avatar image" width="90" height="90">
  </div>
  <div class="row">
    <div class="col-xs-10  col-xs-offset-1">
      <h4>{{name}}</h4>
      <p>{{desc}}</p>
    </div>
  </div>
</div>